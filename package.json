{
  "name": "zutron-monorepo",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/goosewobbler/zutron",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build --filter=zutron",
    "ci": "turbo run test:unit test:e2e:reducers test:e2e:separate-handlers test:e2e:store-handlers",
    "ci-linux": "turbo run test:unit test:e2e:reducers test:e2e:separate-handlers test:e2e:store-handlers --concurrency=1",
    "ci:e2e:logs": "turbo run logs",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "graph:e2e": "tsx ./scripts/create-task-graph.ts ./e2e-graph.png test:unit test:e2e:reducers test:e2e:separate-handlers test:e2e:store-handlers",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goosewobbler/zutron.git"
  },
  "keywords": [
    "zustand",
    "electron",
    "state-management"
  ],
  "devDependencies": {
    "@turbo-version/release": "^0.6.1",
    "@turbo-version/version": "^0.6.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "shelljs": "^0.8.5",
    "tsx": "^4.19.2",
    "turbo": "^2.3.0"
  },
  "lint-staged": {
    "**/*.{yml,json,md,ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.13.1+sha512.5ac37545851c55ec58521b6c285db6f848f93ca70889beb4145f5b40fe234e4ea4faee4dad12ac5c139e494374c65d9c3a6ec9a25954378fa286a250e68d2f20"
}
