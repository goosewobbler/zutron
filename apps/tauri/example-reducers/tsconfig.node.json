{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "composite": true,
    "baseUrl": ".",
    "types": ["electron-vite/node"]
  },
  "include": ["electron.vite.config.*", "src/shared/**/*", "src/main/**/*", "src/preload/**/*", "src/features/**/*"]
}
